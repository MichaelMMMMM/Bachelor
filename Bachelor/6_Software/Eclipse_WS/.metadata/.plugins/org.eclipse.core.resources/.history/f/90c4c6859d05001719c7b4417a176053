#ifndef TLQG_H
#define TLQG_H
#include "TMatrix.h"

template<const UInt32 nrX, UInt32 nrU, UInt32 nrY>
class TLQB
{
public:

private:
	TMatrix<nrU, nrX> mKd;
	TMatrix<nrX, nrY> mLd;
	TMatrix<nrX, nrX> mAd;
	TMatrix<nrX, nrU> mBd;
	TMatrix<nrY, nrX> mCd;

	TRVector<nrY> mY;
	TRVector<nrY> mY_B;
	TRVector<nrX> mX_B;
	TRVector<nrX> mU_B;
	TRVector<nrU> mU;

	static constexpr Float32 sMaxU = 0.11F;
	bool mFirstRun;s
};

#endif
