	CLQB& operator=(const CLQB&) = delete;
	~CLQB() = default;
private:
	Float32 mK[3];
	Float32 mL[3];
	Float32 mA_B[3][3];
	Float32 mB_B[3];
	Float32 mC_B[3];
};

