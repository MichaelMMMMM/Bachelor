#ifndef GLOBAL_H
#define GLOBAL_H
#include "Assertion.h"

using UInt8   = unsigned char;
using UInt16  = unsigned short;
using UInt32  = unsigned long;
using UInt64  = unsigned long long;
using Int8	  = signed char;
using Int16	  = signed short;
using Int32   = signed long;
using Int64   = signed long long;
using Float32 = float;

enum class EBit : UInt32
{
	BIT0 	= 1U << 0U,
	BIT1	= 1U << 1U,
	BIT2	= 1U << 2U,
	BIT3	= 1U << 3U,
	BIT4	= 1U << 4U,
	BIT5	= 1U << 5U,
	BIT6	= 1U << 6U,
	BIT7	= 1U << 7U,
	BIT8	= 1U << 8U,
	BIT9	= 1U << 9U,
	BIT10	= 1U << 10U,
	BIT11	= 1U << 11U,
	BIT12	= 1U << 12U,
	BIT13	= 1U << 13U,
	BIT14	= 1U << 14U,
	BIT15	= 1U << 15U,
	BIT16	= 1U << 16U,
	BIT17	= 1U << 17U,
	BIT18	= 1U << 18U,
	BIT19	= 1U << 19U,
	BIT20	= 1U << 20U,
	BIT21	= 1U << 21U,
	BIT22	= 1U << 22U,
	BIT23	= 1U << 23U,
	BIT24	= 1U << 24U,
	BIT25	= 1U << 25U,
	BIT26	= 1U << 26U,
	BIT27	= 1U << 27U,
	BIT28	= 1U << 28U,
	BIT29	= 1U << 29U,
	BIT30	= 1U << 30U,
	BIT31	= 1U << 31U
};

#endif
