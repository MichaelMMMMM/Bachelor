#ifndef GLOBAL_H
#define GLOBAL_H
#include "Assertion.h"

using UInt8   = unsigned char;
using UInt16  = unsigned short;
using UInt32  = unsigned long;
using UInt64  = unsigned long long;
using Int8	  = signed char;
using Int16	  = signed short;
using Int32   = signed long;
using Int64   = signed long long;
using Float32 = float;


constexpr UInt32 BIT0 	= 1U << 0U;
constexpr UInt32 BIT1	= 1U << 1U;
constexpr UInt32 BIT2	= 1U << 2U;
constexpr UInt32 BIT3	= 1U << 3U;
constexpr UInt32 BIT4	= 1U << 4U;
constexpr UInt32 BIT5	= 1U << 5U;
constexpr UInt32 BIT6	= 1U << 6U;
constexpr UInt32 BIT7	= 1U << 7U;
constexpr UInt32 BIT8	= 1U << 8U;
constexpr UInt32 BIT9	= 1U << 9U;
constexpr UInt32 BIT10	= 1U << 10U;
constexpr UInt32 BIT11	= 1U << 11U;
constexpr UInt32 BIT12	= 1U << 12U;
constexpr UInt32 BIT13	= 1U << 13U;
constexpr UInt32 BIT14	= 1U << 14U;
constexpr UInt32 BIT15	= 1U << 15U;
constexpr UInt32 BIT16	= 1U << 16U;
constexpr UInt32 BIT17	= 1U << 17U;
constexpr UInt32 BIT18	= 1U << 18U;
constexpr UInt32 BIT19	= 1U << 19U;
constexpr UInt32 BIT20	= 1U << 20U;
constexpr UInt32 BIT21	= 1U << 21U;
constexpr UInt32 BIT22	= 1U << 22U;
constexpr UInt32 BIT23	= 1U << 23U;
constexpr UInt32 BIT24	= 1U << 24U;
constexpr UInt32 BIT25	= 1U << 25U;
constexpr UInt32 BIT26	= 1U << 26U;
constexpr UInt32 BIT27	= 1U << 27U;
constexpr UInt32 BIT28	= 1U << 28U;
constexpr UInt32 BIT29	= 1U << 29U;
constexpr UInt32 BIT30	= 1U << 30U;
constexpr UInt32 BIT31	= 1U << 31U;

#endif
