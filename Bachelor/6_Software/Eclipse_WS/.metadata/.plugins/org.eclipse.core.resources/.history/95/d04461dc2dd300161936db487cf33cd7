#ifndef ASTATE_H
#define ASTATE_H
#include "EEvent.h"

class AState
{
public:
	virtual bool dispatch(EEvent event) = 0;
	virtual bool tryEntry(EEvent event, AState*& statePtr) = 0;
	virtual void onEntry() = 0;
	virtual void onExit() = 0;
public:
	AState() = default;
	AState(const AState&) = delete;
	AState& operator=(const AState&) = delete;
	virtual ~AState() = default;
protected:
	static EEvent sInternalQueue;
};

#endif
