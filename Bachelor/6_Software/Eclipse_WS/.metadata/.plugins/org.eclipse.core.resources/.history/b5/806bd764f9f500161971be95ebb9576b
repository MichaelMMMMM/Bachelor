#include "CTMFilter.h"

CTMFilter::CTMFilter() : mTM1Filter(sGF),
						 mTM2Filter(sGF),
						 mTM3Filter(sGF)
{

}
const CTorqueData& CTMFilter::calcOutput(const CTorqueData& input)
{
	mOutput.mTorque1 = mTM1Filter.calculateOutput(input.mTorque1);
	mOutput.mTorque2 = mTM2Filter.calculateOutput(input.mTorque2);
	mOutput.mTorque3 = mTM3Filter.calculateOutput(input.mTorque3);
}
