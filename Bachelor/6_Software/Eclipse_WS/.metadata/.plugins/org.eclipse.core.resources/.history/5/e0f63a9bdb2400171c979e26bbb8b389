#ifndef C1DCMAT_H
#define C1DCMAT_H
#include "TMatrix.h"
#include <string>

class C1DCMat
{
public:
	using InputType		= TRVector<3U>;
	using OutputType	= TRVector<2U>;
public:
	const OutputType& calcOutput(const InputType& input);
	const OutputType& getValue() const;
	void init(std::string& cFile);
};

