#ifndef C1DFULLOBSERVER_H
#define C1DFULLOBSERVER_H
#include "Global.h"
#include "TLQR.h"
#include "C1DCompFilter.h"
#include "TObserver.h"
#include "TLinHierarchy.h"

class C1DFullObserverLQR
{
public:
	using InputType		= TRVector<3U>;
	using OutputType	= TRVector<3U>;
public:
	const OutputType& getOutput(const InputType& input);
	const OutputType& getValue() const;
	TRVector<3U> getX();
	void updateConfig();
public:
	C1DFullObserverLQR();
	C1DFullObserverLQR(const C1DFullObserverLQR&) = delete;
	C1DFullObserverLQR& operator=(const C1DFullObserverLQR&) = delete;
	~C1DFullObserverLQR();
private:
	OutputType	mOutput;
};

#endif
