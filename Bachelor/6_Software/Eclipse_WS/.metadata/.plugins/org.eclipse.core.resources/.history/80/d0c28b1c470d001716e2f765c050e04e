CSPI::CSPI() : mMemoryFD(-1), mRegisterPtr(nullptr)
{
	mMemoryFD = open("/dev/mem", O_RDWR);
	sAssertion(mMemoryFD <= 0, "(CSPI::CSPI) Failed to open /dev/mem", true);
}
