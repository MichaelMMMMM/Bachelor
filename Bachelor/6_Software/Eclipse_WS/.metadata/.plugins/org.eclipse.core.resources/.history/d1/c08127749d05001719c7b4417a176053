 * @brief	Template class to realize a optimal controller + stationary kalman filter.
 */
#ifndef TLQG_H
#define TLQG_H
#include "TMatrix.h"

template<const UInt32 nrX, UInt32 nrU, UInt32 nrY>
class TLQB
{
public:

private:
	TMatrix<nrU, nrX> mKd;
	TMatrix<nrX, nrY> mLd;
	TMatrix<nrX, nrX> mAd;
	TMatrix<nrX, nrU> mBd;
	TMatrix<nrY, nrX> mCd;
};

#endif
