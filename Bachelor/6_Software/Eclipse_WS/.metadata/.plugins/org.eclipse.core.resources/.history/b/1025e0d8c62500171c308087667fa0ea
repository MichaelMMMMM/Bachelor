#include "C3DCompFilter.h"

C3DCompFilter::C3DCompFilter()
{
	mDPhi[1][1] = 0.8660F;
	mDPhi[2][1] = 0.8660F;
	mDPhi[3][1] = 0.0F;
	mDPhi[4][1] = -0.707106781186547F;
	mDPhi[5][1] = 0.707106781186547F;
	mDPhi[6][1] = 0.0F;
	mDPhi[7][1] = -0.5F;
	mDPhi[8][1] = -0.5F;
	mDPhi[9][1] = 1.0F;
}
const C3DCompFilter::OutputType& C3DCompFilter::calcOutput(const C3DCompFilter::InputType& input)
{
	if(mFirstRun == true)
	{
		mFirstRun = false;
		mOutput   = input;
	}
	else
	{

	}
	return mOutput;
}
