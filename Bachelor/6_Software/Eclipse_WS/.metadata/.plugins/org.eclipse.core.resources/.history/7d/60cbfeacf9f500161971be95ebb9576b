/**
 * @file	CTMFilter.h
 * @author	Michael Meindl
 * @date	18.02.2017
 * @brief	Filter-System for the Motor Torques.
 */
#ifndef CTMFILTER_H
#define CTMFILTER_H
#include "CPT1.h"
#include "CTorqueData.h"

class CTMFilter
{
public:
	using InputType = CTorqueData;
	using OutputType = CTorqueData;
public:
	const CTorqueData& calcOutput(const CTorqueData& input);
	const CTorqueData& getValue();
public:
	CTMFilter();
	CTMFilter(const CTMFilter&) = delete;
	CTMFilter& operator=(const CTMFilter&) = delete;
	~CTMFilter() = default;
private:
	CTorqueData mOutput;

	CPT1 mTM1Filter;
	CPT1 mTM2Filter;
	CPT1 mTM3Filter;

	static constexpr Float32 sGF = 15.0F;
};

#endif
